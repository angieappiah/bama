<!DOCTYPE html>
<html>
  <head>
    <title>Bama</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=League+Script" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
  <div class='contaier'>
  <div class='row'>
  <div class='nav navbar-default'>
    <ul class='nav nav-pills navbar-static-top pull-right'>
      <li class='nav-element'><%= link_to "Styles", styles_path %></li>
      <li class='nav-element'><%= link_to "Pieces", pieces_path %></li>
      <% if session[:user_id] %>
        <li class='nav-element'><%= link_to "Log Out", logout_path %></li>
      <% else %>
        <li class='nav-element'><%= link_to "Log In", login_path %></li>
      <% end %>
      <li class='divider-vertical'></li>
      <li><a href="#" target="_blank" class="fa fa-facebook"></a></li>
      
    </ul>
  </div>
</div>
</div>

<div class="container">
<% if flash[:notice] %>
<div class="alert alert-info"><%= flash[:notice] %></div>
<% end %>
    <%= yield %>
  </body>
</html>
